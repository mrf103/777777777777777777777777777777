import React, { useState, useMemo } from "react";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { base44 } from "@/api/base44Client";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { motion, AnimatePresence } from "framer-motion";
import {
  BookOpen,
  Search,
  Filter,
  MoreVertical,
  Trash2,
  Edit,
  Eye,
  Download,
  Shield,
  Palette,
  Plus,
  Grid,
  List,
  FileText,
  Clock,
  CheckCircle,
  AlertTriangle
} from "lucide-react";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Badge } from "@/components/ui/badge";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuSeparator,
  DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import {
  AlertDialog,
  AlertDialogAction,
  AlertDialogCancel,
  AlertDialogContent,
  AlertDialogDescription,
  AlertDialogFooter,
  AlertDialogHeader,
  AlertDialogTitle,
} from "@/components/ui/alert-dialog";

export default function Manuscripts() {
  const queryClient = useQueryClient();
  const [search, setSearch] = useState("");
  const [statusFilter, setStatusFilter] = useState("all");
  const [viewMode, setViewMode] = useState("grid");
  const [deleteId, setDeleteId] = useState(null);

  const { data: manuscripts = [], isLoading } = useQuery({
    queryKey: ["manuscripts"],
    queryFn: () => base44.entities.Manuscript.list("-created_date"),
  });

  const deleteMutation = useMutation({
    mutationFn: (id) => base44.entities.Manuscript.delete(id),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["manuscripts"] });
      setDeleteId(null);
    },
  });

  const filteredManuscripts = useMemo(() => {
    return manuscripts.filter((m) => {
      const matchesSearch =
        m.title?.toLowerCase().includes(search.toLowerCase()) ||
        m.author?.toLowerCase().includes(search.toLowerCase());
      const matchesStatus = statusFilter === "all" || m.status === statusFilter;
      return matchesSearch && matchesStatus;
    });
  }, [manuscripts, search, statusFilter]);

  const statusColors = {
    draft: "bg-slate-100 text-slate-700 border-slate-200",
    processing: "bg-blue-100 text-blue-700 border-blue-200",
    editing: "bg-amber-100 text-amber-700 border-amber-200",
    compliance_check: "bg-purple-100 text-purple-700 border-purple-200",
    ready: "bg-emerald-100 text-emerald-700 border-emerald-200",
    published: "bg-green-100 text-green-700 border-green-200",
  };

  const statusLabels = {
    draft: "مسودة",
    processing: "قيد المعالجة",
    editing: "قيد التحرير",
    compliance_check: "فحص الامتثال",
    ready: "جاهز",
    published: "منشور",
  };

  const complianceColors = {
    pending: "bg-slate-100 text-slate-600",
    passed: "bg-emerald-100 text-emerald-700",
    flagged: "bg-red-100 text-red-700",
    reviewed: "bg-blue-100 text-blue-700",
  };

  const complianceLabels = {
    pending: "معلق",
    passed: "مجاز",
    flagged: "يحتاج مراجعة",
    reviewed: "تمت المراجعة",
  };

  return (
    <div className="p-8">
      {/* Header */}
      <motion.div
        initial={{ opacity: 0, y: -20 }}
        animate={{ opacity: 1, y: 0 }}
        className="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8"
      >
        <div>
          <h1 className="text-3xl font-bold text-slate-800">المخطوطات</h1>
          <p className="text-slate-500 mt-1">إدارة جميع مخطوطاتك</p>
        </div>
        <Link to={createPageUrl("Upload")}>
          <Button className="bg-gradient-to-l from-[#1e3a5f] to-[#2563eb] gap-2">
            <Plus className="w-4 h-4" />
            رفع مخطوطة جديدة
          </Button>
        </Link>
      </motion.div>

      {/* Filters */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.1 }}
        className="flex flex-col md:flex-row gap-4 mb-6"
      >
        <div className="relative flex-1">
          <Search className="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" />
          <Input
            placeholder="البحث في المخطوطات..."
            value={search}
            onChange={(e) => setSearch(e.target.value)}
            className="pr-10"
          />
        </div>
        <Select value={statusFilter} onValueChange={setStatusFilter}>
          <SelectTrigger className="w-full md:w-48">
            <Filter className="w-4 h-4 ml-2" />
            <SelectValue placeholder="الحالة" />
          </SelectTrigger>
          <SelectContent>
            <SelectItem value="all">جميع الحالات</SelectItem>
            <SelectItem value="draft">مسودة</SelectItem>
            <SelectItem value="processing">قيد المعالجة</SelectItem>
            <SelectItem value="editing">قيد التحرير</SelectItem>
            <SelectItem value="compliance_check">فحص الامتثال</SelectItem>
            <SelectItem value="ready">جاهز</SelectItem>
            <SelectItem value="published">منشور</SelectItem>
          </SelectContent>
        </Select>
        <div className="flex gap-2">
          <Button
            variant={viewMode === "grid" ? "default" : "outline"}
            size="icon"
            onClick={() => setViewMode("grid")}
          >
            <Grid className="w-4 h-4" />
          </Button>
          <Button
            variant={viewMode === "list" ? "default" : "outline"}
            size="icon"
            onClick={() => setViewMode("list")}
          >
            <List className="w-4 h-4" />
          </Button>
        </div>
      </motion.div>

      {/* Content */}
      {isLoading ? (
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {[1, 2, 3, 4, 5, 6].map((i) => (
            <Card key={i} className="h-64 animate-pulse bg-slate-100" />
          ))}
        </div>
      ) : filteredManuscripts.length === 0 ? (
        <Card className="border-0 shadow-lg">
          <CardContent className="py-16 text-center">
            <BookOpen className="w-16 h-16 text-slate-300 mx-auto mb-4" />
            <h3 className="text-lg font-medium text-slate-700">لا توجد مخطوطات</h3>
            <p className="text-slate-500 mt-1">
              {search ? "لم يتم العثور على نتائج" : "قم برفع أول مخطوطة لبدء العمل"}
            </p>
            {!search && (
              <Link to={createPageUrl("Upload")}>
                <Button className="mt-4 gap-2">
                  <Plus className="w-4 h-4" />
                  رفع مخطوطة
                </Button>
              </Link>
            )}
          </CardContent>
        </Card>
      ) : viewMode === "grid" ? (
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <AnimatePresence>
            {filteredManuscripts.map((manuscript, i) => (
              <motion.div
                key={manuscript.id}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                exit={{ opacity: 0, scale: 0.9 }}
                transition={{ delay: i * 0.05 }}
              >
                <Card className="border-0 shadow-lg hover:shadow-xl transition-all group overflow-hidden">
                  <CardContent className="p-0">
                    {/* Cover */}
                    <div className="relative h-48 bg-gradient-to-br from-[#1e3a5f] to-[#2563eb] p-6">
                      {manuscript.cover_image_url ? (
                        <img
                          src={manuscript.cover_image_url}
                          alt={manuscript.title}
                          className="absolute inset-0 w-full h-full object-cover"
                        />
                      ) : (
                        <div className="h-full flex flex-col justify-end">
                          <BookOpen className="w-12 h-12 text-white/30 mb-4" />
                          <h3 className="text-xl font-bold text-white truncate">
                            {manuscript.title}
                          </h3>
                          <p className="text-white/70 text-sm">{manuscript.author}</p>
                        </div>
                      )}
                      
                      {/* Actions */}
                      <div className="absolute top-4 left-4 opacity-0 group-hover:opacity-100 transition-opacity">
                        <DropdownMenu>
                          <DropdownMenuTrigger asChild>
                            <Button size="icon" variant="secondary" className="w-8 h-8">
                              <MoreVertical className="w-4 h-4" />
                            </Button>
                          </DropdownMenuTrigger>
                          <DropdownMenuContent align="start">
 