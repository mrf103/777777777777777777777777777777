# ===========================================
# Seyadi Publishing Platform - Environment Variables
# ===========================================

# API Configuration
VITE_API_BASE_URL=https://api.seyadi.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Supabase Configuration (Database, Auth, Storage)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google AI (Gemini) Configuration
VITE_GOOGLE_AI_API_KEY=your_google_ai_api_key

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_AI_SUGGESTIONS=true
VITE_ENABLE_COLLABORATION=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NLP_CACHING=true
VITE_ENABLE_WEB_WORKERS=true

# Upload Settings
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=.txt,.docx,.pdf,.rtf
VITE_MAX_WORD_COUNT=200000

# Compliance Settings
VITE_COMPLIANCE_REGIONS=SA,AE,EG,JO
VITE_DEFAULT_COMPLIANCE_LEVEL=medium

# UI Settings
VITE_DEFAULT_LANGUAGE=ar
VITE_DEFAULT_THEME=light
VITE_ENABLE_RTL=true
